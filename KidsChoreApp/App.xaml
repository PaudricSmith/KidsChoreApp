<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mi="http://www.aathifmahir.com/dotnet/2022/maui/icons"
             x:Class="KidsChoreApp.App">
    
    <Application.Resources>
        <ResourceDictionary>
            
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Define the password eye icons as FontImageSource resources here -->
            <FontImageSource x:Key="EyeOpenIcon" Glyph="{mi:Fluent Icon=Eye24}" FontFamily="FluentIcons" Size="32" Color="Black" />
            <FontImageSource x:Key="EyeClosedIcon" Glyph="{mi:Fluent Icon=EyeOff24}" FontFamily="FluentIcons" Size="32" Color="Black" />
            
        </ResourceDictionary>
    </Application.Resources>
    
</Application>
